<section class="container-my-project justify-content-center mt-5" id="project">
  <h1 class="text-center fs-2 fw-bold">MY PROJECT</h1>
  <form action="" class="m-0">
 
    <div class="container">
      <div class="row mt-4" id="contents">
      {{#each projects}}
        <div class="col-lg-4">
          <div class="card-project shadow">
            <div class="card-body-project m-3">
              <div class="my-project-img">
                <img  class="mt-3 mb-3" src="/public/assets/my-project-img-detail.png" alt="cover">
              </div>
               <a href="project-detail/{{this.id}}" class="fw-bold text-decoration-none fs-5 text-dark">{{this.name}}</a>
               <div class="detail-project-content mb-3">
                duration : {{this.duration}}
               </div>
               <p class="fw-semibold">{{this.description}}
               </p>
                <div class="logo d-flex align-items-center mb-3">
                    {{#if this.technologies.[0]}}
                     <img  src="/public/assets/nodejs.png" alt="ns" id="nss" style="widht-10">
                     {{/if}}
                     {{#if this.technologies.[1]}}
                     <img src="/public/assets/reactjs.png" alt="rs" id="rss">
                     {{/if}}
                     {{#if this.technologies.[2]}}
                     <img src="/public/assets/js.png" alt="js" id="jss">
                     {{/if}}
                     {{#if this.technologies.[3]}}
                     <img src="/public/assets/typescript.png" alt="ts" id="tss">
                     {{/if}}
                </div>                

              <div class="text-end mt-4">
                <a href="/edit-project/{{@index}}" class="btn bg-black text-white mb-3 fw-semibold">edit</a>
                <a href="/delete-project/{{@index}}" class="btn bg-black text-white mb-3 fw-semibold">delete</a>
              </div> 
            </div>     
           </div>
         </div>
      {{/each}}
      </div>
    </div>  
  </form>
</section>
  

